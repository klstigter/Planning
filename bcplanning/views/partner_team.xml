<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <template id="web_partner_resource_template" name="BC Planning Partner Resources">
    <t t-call="website.layout">
      <div id="resource_wrap" class="oe_structure">
        <div class="container my-4">
          <h3>Partner Resources List</h3>
          <p class="mb-3">
            Partner:
            <strong id="partner-name"><t t-esc="partner_name"/></strong>
            <span class="text-muted ms-2">(ID: <span id="partner-id" t-esc="partner_id"/>)</span>
          </p>

          <div class="d-flex justify-content-between align-items-center mb-2">
            <button id="btn-add-resource" class="btn btn-primary">
              <i class="fa fa-plus me-1" aria-hidden="true"></i> Add Resource
            </button>
            <div id="resources-feedback" class="text-danger small"></div>
          </div>

          <div class="table-responsive">
            <table id="resources-table" class="table table-bordered align-middle">
              <thead class="table-light">
                <tr>
                  <th class="col-id">ID</th>
                  <th class="col-name">Name</th>
                  <th class="col-email">Email</th>
                  <th class="col-portal text-center">Portal</th>
                  <th class="col-projects text-center">Projects</th>
                  <th class="col-teams text-center">Teams</th>
                  <th class="col-partner text-center">Planning</th>
                  <th class="col-bor text-center">BOR</th>
                  <th class="col-resource text-center">Resource</th>
                  <th class="col-actions text-center">Actions</th>
                </tr>
              </thead>
              <tbody id="resources-tbody">
                <tr data-empty="true">
                  <td colspan="10" class="text-center text-muted">Loading...</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>

        <!-- Modal for Create/Update -->
        <div class="modal fade" id="resourceModal" tabindex="-1" aria-labelledby="resourceModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <form id="resource-form">
                <div class="modal-header">
                  <h5 class="modal-title" id="resourceModalLabel">Add Resource</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <input type="hidden" id="resource-id" value=""/>
                  <div class="mb-3">
                    <label for="resource-name" class="form-label">Name</label>
                    <input type="text" id="resource-name" class="form-control" placeholder="Enter resource name" required="required"/>
                  </div>
                  <div class="mb-3">
                    <label for="resource-email" class="form-label">Email</label>
                    <input type="email" id="resource-email" class="form-control" placeholder="Enter email" required="required"/>
                  </div>

                  <div id="resource-form-feedback" class="text-danger small"></div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                  <button type="submit" class="btn btn-primary" id="resource-save-btn">Save</button>
                </div>
              </form>
            </div>
          </div>
        </div>

      </div>

      <style>
        /* Make table columns adapt to content (no wrapping) */
        #resources-table { width: 100%; table-layout: auto; }
        #resources-table th, #resources-table td {
          white-space: nowrap;            /* prevent text wrapping */
          vertical-align: middle;
        }

        /* Apply minimum widths to avoid narrow columns and prevent header wrap */
        #resources-table th.col-id, #resources-table td.col-id { min-width: 56px; }
        #resources-table th.col-name, #resources-table td.col-name { min-width: 180px; }
        #resources-table th.col-email, #resources-table td.col-email { min-width: 220px; }
        #resources-table th.col-portal, #resources-table td.col-portal { min-width: 64px; text-align:center; }
        #resources-table th.col-actions, #resources-table td.col-actions { min-width: 110px; text-align:center; }

        /* Slightly wider for resource/project columns if needed */
        #resources-table th.col-resource, #resources-table td.col-resource { min-width: 90px; text-align:center; }
        #resources-table th.col-projects, #resources-table td.col-projects,
        #resources-table th.col-teams, #resources-table td.col-teams,
        #resources-table th.col-partner, #resources-table td.col-partner,
        #resources-table th.col-bor, #resources-table td.col-bor {
          min-width: 80px;
          text-align: center;
        }

        /* Make table responsive: allow horizontal scroll on small screens instead of wrapping */
        .table-responsive { overflow-x: auto; -webkit-overflow-scrolling: touch; }

        /* Small adjustments for icons */
        .menu-toggle { display:inline-block; width:28px; height:28px; text-align:center; line-height:28px; }
        .portal-indicator .portal-icon { display:inline-block; width:20px; height:20px; line-height:20px; text-align:center; border-radius:50%; }
        .portal-indicator .portal-icon.text-success { color: #fff; background: #2ca01c; }
        .portal-indicator .portal-icon.text-muted { color: #6c757d; background: transparent; }
      </style>
    </t>
  </template>
</odoo>