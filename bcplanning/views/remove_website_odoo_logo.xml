<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template inherit_id="web.brand_promotion_message" id="brand_promotion_message">
        <xpath expr="//t[@t-set='final_message']" position="replace"/>
        <xpath expr="//t[@t-out]" position="replace"/>
    </template>

    <template id="brand_promotion" inherit_id="website.brand_promotion">
        <xpath expr="//t[@t-call='web.brand_promotion_message']" position="replace"/>
    </template>
</odoo>