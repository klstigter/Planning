<odoo>
  <record id="view_bcplanning_config_settings" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.inherit.bcplanning</field>
    <field name="model">res.config.settings</field>
    <field name="priority" eval="40"/>
    <field name="inherit_id" ref="base.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//form" position="inside">
        <app data-string="BCPlanning" string="BCPlanning" name="bcplanning">
          <block title="Business Central API" name="bc_settings_block">
            <setting string="Client Id" help="Business Central Client Id">
              <field name="bcplanning_setting_client_id"/>
            </setting>
            <setting string="Client Secret" help="Business Central Client Secret">
              <field name="bcplanning_setting_client_secret"/>
            </setting>
            <setting string="Tenant Id" help="Business Central Tenant Id">
              <field name="bcplanning_setting_tenant_id"/>
            </setting>
            <setting string="Environment Name" help="Business Central Environment Name">
              <field name="bcplanning_setting_env_name"/>
            </setting>
            <setting string="Company Id" help="Business Central Company Id (GUID)">
              <field name="bcplanning_setting_company_id"/>
            </setting>
          </block>
          <block title="User Group" name="usergroup_settings_block">            
            <div class="o_setting_box">
              <group>
                <field name="bcplanning_base_group_id"/>
              </group>
            </div>

            <div class="o_setting_box">
              <group>
                <field name="bcplanning_project_group_id"/>
              </group>
            </div>

            <div class="o_setting_box">
              <group>
                <field name="bcplanning_team_group_id"/>
              </group>
            </div>

            <div class="o_setting_box">
              <group>
                <field name="bcplanning_planning_group_id"/>
              </group>
            </div>

            <div class="o_setting_box">
              <group>
                <field name="bcplanning_bor_group_id"/>
              </group>
            </div>

            <div class="o_setting_box">
              <group>
                <field name="bcplanning_taskresource_group_id"/>
              </group>
            </div>
          </block>
        </app>
      </xpath>
    </field>
  </record>
</odoo>